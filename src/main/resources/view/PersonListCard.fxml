<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" prefHeight="105.0" prefWidth="161.0" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
         <HBox prefHeight="15.0" prefWidth="129.0">
            <children>
               <Label fx:id="type" prefHeight="17.0" prefWidth="74.0" styleClass="cell_big_label" text="\$type" />
               <Label fx:id="locationOfEngagement" prefHeight="17.0" prefWidth="85.0" styleClass="cell_small_label" text="\$locationOfEngagement" />
            </children>
         </HBox>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="startTime" prefHeight="17.0" prefWidth="56.0" styleClass="cell_big_label" text="\$start" />
            <Label fx:id="endTime" prefHeight="17.0" prefWidth="61.0" text="\$end" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="attendees" styleClass="cell_small_label" text="\$attendees" />
      <Label fx:id="description" styleClass="cell_small_label" text="\$description" />
         <Label fx:id="priority" styleClass="cell_small_label" text="\$priority" />
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
